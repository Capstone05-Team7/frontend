<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AnalysisTempFragment"
    android:layout_marginHorizontal="16dp">
    <LinearLayout
        android:id="@+id/script_top_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/analysis_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:fontFamily="@font/pretendard_black"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="10dp"
            />

        <View
            android:id="@+id/analysis_empty_v"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/analysis_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_bold"
            android:text="2025.00.00"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/sen_key_ic"
        android:layout_width="380dp"
        android:layout_height="34dp"
        android:src="@drawable/sen_key_ic"
        app:layout_constraintBottom_toTopOf="@id/analysis_scr_back_fl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/script_top_ll"
        android:layout_marginTop="4dp"/>
    <FrameLayout
        android:id="@+id/analysis_scr_back_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#E6E6E6"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/sen_key_ic"
        app:layout_constraintBottom_toBottomOf="@id/analysis_bottom_ll">
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/analysis_scr_rcv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:scrollbarFadeDuration="0"
        app:layout_constraintTop_toTopOf="@id/analysis_scr_back_fl"
        app:layout_constraintStart_toStartOf="@id/analysis_scr_back_fl"
        app:layout_constraintEnd_toEndOf="@id/analysis_scr_back_fl"
        app:layout_constraintBottom_toBottomOf="@id/analysis_scr_back_fl"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"/>

    <LinearLayout
        android:id="@+id/analysis_bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/analysis_scr_back_fl"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/analysis_save_iv"
            android:layout_width="136dp"
            android:layout_height="72dp"
            android:src="@drawable/btn_save"
            android:contentDescription="저장"/>
        <View
            android:id="@+id/analysis_empty_v2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/analysis_start_iv"
            android:layout_width="232dp"
            android:layout_height="72dp"
            android:src="@drawable/btn_start"
            android:contentDescription="시작"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>