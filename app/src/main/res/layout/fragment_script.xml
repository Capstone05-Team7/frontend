<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.script.ScriptFragment">

    <LinearLayout
        android:id="@+id/script_top_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:id="@+id/script_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:fontFamily="@font/pretendard_black"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="10dp"
            />

        <View
            android:id="@+id/script_empty_v"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/script_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_bold"
            android:text="2025.00.00"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/script_frame_fl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edittext_border"
        app:layout_constraintBottom_toTopOf="@id/script_bottom_ll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/script_top_ll"
        android:layout_marginHorizontal="16dp">

        <EditText
            android:id="@+id/script_edit_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:layout_margin="10dp"/>
    </FrameLayout>



    <LinearLayout
        android:id="@+id/script_bottom_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/script_frame_fl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/script_draft_btn"
            android:layout_width="170dp"
            android:layout_height="54dp"
            android:src="@drawable/script_draft_btn"
            android:background="@null"
            android:layout_marginEnd="7dp"
            android:contentDescription="임시 저장 버튼" />

        <ImageButton
            android:id="@+id/script_complete_btn"
            android:layout_width="203dp"
            android:layout_height="56dp"
            android:src="@drawable/script_complete_btn"
            android:background="@null"
            android:contentDescription="완료 버튼" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/script_loading_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#B3000000"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <FrameLayout
                android:id="@+id/script_blur_fl"
                android:layout_width="126dp"
                android:layout_height="126dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/script_ing_tv">
                <ImageView
                    android:id="@+id/script_blur_pro1_iv"
                    android:layout_width="126dp"
                    android:layout_height="126dp"
                    android:src="@drawable/pro1"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView
                    android:id="@+id/script_blur_pro2_iv"
                    android:layout_width="126dp"
                    android:layout_height="126dp"
                    android:src="@drawable/pro2"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/script_blur_pro3_iv"
                    android:layout_width="126dp"
                    android:layout_height="126dp"
                    android:src="@drawable/pro3"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/script_blur_pro4_iv"
                    android:layout_width="126dp"
                    android:layout_height="126dp"
                    android:src="@drawable/pro4"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Loading..."
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="16sp"
                    />
            </FrameLayout>

            <TextView
                android:id="@+id/script_ing_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_bold"
                android:text="키워드를 추출하고 있습니다\n잠시만 기다려 주세요"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/script_blur_fl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>