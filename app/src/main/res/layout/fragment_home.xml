<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/home_search_iv"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:src="@drawable/textbox_search_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_top_ll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="16dp"
        />
    
    <ImageView
        android:id="@+id/home_search_cal_iv"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_searchbar_cal"
        app:layout_constraintTop_toTopOf="@id/home_search_iv"
        app:layout_constraintBottom_toBottomOf="@id/home_search_iv"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="@id/home_search_iv"
        />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_searchbar_search"
        app:layout_constraintTop_toTopOf="@id/home_search_iv"
        app:layout_constraintBottom_toBottomOf="@id/home_search_iv"
        app:layout_constraintEnd_toStartOf="@id/home_search_cal_iv"
        android:layout_marginEnd="8dp"
        />


    <LinearLayout
        android:id="@+id/home_top_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_search_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_scr_rcv">

        <TextView
            android:id="@+id/home_list_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:fontFamily="@font/pretendard_black"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="10dp"
            />

        <View
            android:id="@+id/home_empty_v"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/home_updown_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_up_down"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_scr_rcv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:scrollbarFadeDuration="0"
        app:layout_constraintTop_toBottomOf="@id/home_top_ll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>