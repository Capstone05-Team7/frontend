<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ScriptFragment">

    <LinearLayout
        android:id="@+id/script_top_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/script_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:fontFamily="@font/pretendard_black"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="10dp"
            />

        <View
            android:id="@+id/script_empty_v"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/script_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_bold"
            android:text="2025.00.00"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/script_frame_fl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edittext_border"
        app:layout_constraintBottom_toTopOf="@id/script_bottom_ll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/script_top_ll"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="top|start"
        app:layout_constraintBottom_toBottomOf="@id/script_frame_fl"
        app:layout_constraintEnd_toEndOf="@id/script_frame_fl"
        app:layout_constraintStart_toStartOf="@id/script_frame_fl"
        app:layout_constraintTop_toTopOf="@id/script_frame_fl"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"/>
    
    <LinearLayout
        android:id="@+id/script_bottom_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/script_frame_fl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp">
        
        <ImageView
            android:layout_width="170dp"
            android:layout_height="54dp"
            android:src="@drawable/script_draft_btn"
            android:layout_marginEnd="7dp"
            />

        <ImageView
            android:layout_width="203dp"
            android:layout_height="56dp"
            android:src="@drawable/script_complete_btn"
            />
    </LinearLayout>
    


</androidx.constraintlayout.widget.ConstraintLayout>